<% if @brand.errors.any? %>
  <% @brand.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit brand #<%= @brand.id %>
</h1>

<hr>

<form action="/update_brand/<%= @brand.id %>" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @brand.name %>">
  </div>

  <div class="form-group">
    <label for="organization_id">
      Organization
    </label>

    <%= select_tag(:organization_id, options_from_collection_for_select(Organization.all, :id, :created_at, @brand.organization_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="characteristics">
      Characteristics
    </label>

    <input type="text" id="characteristics" name="characteristics" class="form-control" value="<%= @brand.characteristics %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update brand
  </button>
</form>

<hr>

<a href="/brands">
  Go back
</a>
