<!-- Form productline start -->
<form action="/create_productline_from_brand" method="post">
<!-- Form productline end -->

  <!-- Label and input for brand_id start -->
  <!-- Input for brand_id start -->
  <input type="hidden" name="brand_id" value="<%= @brand.id %>">
  <!-- Input for brand_id end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @productline.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for characteristics start -->
  <div class="form-group">
    <label for="characteristics">
      Characteristics
    </label>

    <!-- Input for characteristics start -->
    <input type="text" id="characteristics" name="characteristics" class="form-control" value="<%= @productline.characteristics %>">
    <!-- Input for characteristics end -->
  </div>
  <!-- Label and input for characteristics end -->

  <button class="btn btn-block btn-outline-secondary">
    Create productline
  </button>
</form>
