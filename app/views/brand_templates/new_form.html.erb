<h1>
  Add a new brand
</h1>


<hr>

<!-- Form brand start -->
<form action="/create_brand" method="post">
<!-- Form brand end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for organization_id start -->
  <div class="form-group">
    <label for="organization_id">
      Organization
    </label>

    <!-- Input for organization_id start -->
    <input type="text" id="organization_id" name="organization_id" class="form-control">
    <!-- Input for organization_id end -->
  </div>
  <!-- Label and input for organization_id end -->

  <!-- Label and input for characteristics start -->
  <div class="form-group">
    <label for="characteristics">
      Characteristics
    </label>

    <!-- Input for characteristics start -->
    <input type="text" id="characteristics" name="characteristics" class="form-control">
    <!-- Input for characteristics end -->
  </div>
  <!-- Label and input for characteristics end -->

  <button class="btn btn-block btn-outline-secondary">
    Create brand
  </button>
</form>

<hr>

<a href="/brands">
  Go back
</a>
