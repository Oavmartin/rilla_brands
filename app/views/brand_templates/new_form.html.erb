<h1>
  Add a new brand
</h1>


<hr>

<form action="/create_brand" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control">
  </div>

  <div class="form-group">
    <label for="organization_id">
      Organization
    </label>

    <%= select_tag(:organization_id, options_from_collection_for_select(Organization.all, :id, :created_at, @brand.organization_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="characteristics">
      Characteristics
    </label>

    <input type="text" id="characteristics" name="characteristics" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create brand
  </button>
</form>

<hr>

<a href="/brands">
  Go back
</a>
