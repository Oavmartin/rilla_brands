<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Productline #<%= @productline.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/productlines" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link productline start -->
      <div class="col">
        <a href="/productlines/<%= @productline.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit productline
        </a>
      </div>
      <!-- Edit link productline end -->

      <!-- Delete link productline start -->
      <div class="col">
        <a href="/delete_productline/<%= @productline.id %>" class="btn btn-block btn-outline-secondary">
          Delete productline
        </a>
      </div>
      <!-- Delete link productline end -->
    </div>

    <dl>
      <dt>
        Brand
      </dt>
      <!-- Display brand_id start -->
      <dd>
        <% if @productline.brand.present? %>
          <a href="/brands/<%= @productline.brand_id %>">
            <%= @productline.brand.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display brand_id end -->

      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @productline.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Characteristics
      </dt>
      <!-- Display characteristics start -->
      <dd>
        <%= @productline.characteristics %>
      </dd>
      <!-- Display characteristics end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@productline.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@productline.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "productline_templates/productline_products" %>
  </div>
</div>
<!-- Show Page Customization end -->
