<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Organization #<%= @organization.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/organizations" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link organization start -->
      <div class="col">
        <a href="/organizations/<%= @organization.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit organization
        </a>
      </div>
      <!-- Edit link organization end -->

      <!-- Delete link organization start -->
      <div class="col">
        <a href="/delete_organization/<%= @organization.id %>" class="btn btn-block btn-outline-secondary">
          Delete organization
        </a>
      </div>
      <!-- Delete link organization end -->
    </div>

    <dl>
      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@organization.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@organization.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "organization_templates/organization_brands" %>
  </div>
</div>
<!-- Show Page Customization end -->
