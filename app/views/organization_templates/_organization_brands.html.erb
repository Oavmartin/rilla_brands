<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Brands

    <a data-toggle="collapse" href="#organization_brands_new_form">
      Add brand
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @organization.brands.each do |brand| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/brands/<%= brand.id %>">
          <%= brand.name %>
        </a>

        <a href="/delete_brand_from_organization/<%= brand.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="organization_brands_new_form">
        <%= render partial: "organization_templates/organization_brands_new_form" %>
      </div>
    </div>

  </ul>
</div>
