<!-- Validation failure messages -->
<% if @organization.present? %>
  <% if @organization.errors.any? %>
    <% @organization.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

