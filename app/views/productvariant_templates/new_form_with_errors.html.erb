<% if @productvariant.present? %>
  <% if @productvariant.errors.any? %>
    <% @productvariant.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new productvariant
</h1>


<hr>

<form action="/create_productvariant" method="post">

  <div class="form-group">
    <label for="product_id">
      Product
    </label>

    <%= select_tag(:product_id, options_from_collection_for_select(Product.all, :id, :productline_id, @productvariant.product_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="characteristics">
      Characteristics
    </label>

    <input type="text" id="characteristics" name="characteristics" class="form-control" value="<%= @productvariant.characteristics %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create productvariant
  </button>
</form>

<hr>

<a href="/productvariants">
  Go back
</a>
