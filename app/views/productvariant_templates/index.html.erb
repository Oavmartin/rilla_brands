<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All productvariants
    </h1>

    <a href="/productvariants/new" class="btn btn-block btn-outline-secondary">
      Add a new productvariant
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "productvariant_templates/productvariants_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Product
        </th>

        <th>
          Characteristics
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @productvariants.each do |productvariant| %>
      <tr>
        <td>
          <%= productvariant.id %>
        </td>

        <td>
          <% if productvariant.product.present? %>
            <a href="/products/<%= productvariant.product.id %>">
              <%= productvariant.product.productline_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= productvariant.characteristics %>
        </td>

        <td>
          <%= time_ago_in_words(productvariant.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(productvariant.updated_at) %> ago
        </td>

        <td>
          <a href="/productvariants/<%= productvariant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @productvariants, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
