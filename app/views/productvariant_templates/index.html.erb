<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All productvariants
    </h1>

    <a href="/productvariants/new" class="btn btn-block btn-outline-secondary">
      Add a new productvariant
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Product
        </th>

        <th>
          Characteristics
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @productvariants.each do |productvariant| %>
      <tr>
        <!-- Display productvariant.id start -->
        <td>
          <%= productvariant.id %>
        </td>
        <!-- Display productvariant.id end -->

        <!-- Display productvariant.product_id start -->
        <td>
          <%= productvariant.product.productline_id %>
        </td>
        <!-- Display productvariant.product_id end -->

        <!-- Display productvariant.characteristics start -->
        <td>
          <%= productvariant.characteristics %>
        </td>
        <!-- Display productvariant.characteristics end -->

        <!-- Display productvariant.created_at start -->
        <td>
          <%= time_ago_in_words(productvariant.created_at) %> ago
        </td>
        <!-- Display productvariant.created_at end -->

        <!-- Display productvariant.updated_at start -->
        <td>
          <%= time_ago_in_words(productvariant.updated_at) %> ago
        </td>
        <!-- Display productvariant.updated_at end -->

        <td>
          <a href="/productvariants/<%= productvariant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
